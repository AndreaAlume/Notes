<div class="notes-container">
    <h1>Le tue note</h1>
    {{#each notes}}
        <article class="notes-list">
            <header class="note-header">
                <h3 class="note-title">{{name}}</h3>
            </header>

            <p class="note-content">{{description}}</p>

            <div class="date-note">
                <span class="date-label">Scadenza</span>
                <span class="date-value">{{expiryDate}}</span>
            </div>

            <div class="button-box">
                <button type="button" class="complete-btn">‚úî Completato</button>
                <button type="button" class="modify-btn">‚úè Modifica</button>
                <button type="button" class="delete-btn">üóë Elimina</button>
            </div>
        </article>
    {{/each}}

    <button type="button" class="add-btn">‚ûï Aggiungi</button>
</div>
